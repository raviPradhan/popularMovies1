<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_detail_poster"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/poster_description"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/iv_detail_poster"
        android:layout_toRightOf="@+id/iv_detail_poster"
        tools:text="Beauty and the Beast" />

    <TextView
        android:id="@+id/tv_detail_releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_detail_title"
        android:layout_alignStart="@+id/tv_detail_title"
        android:layout_below="@+id/tv_detail_title"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/iv_detail_poster"
        android:layout_toRightOf="@+id/iv_detail_poster"
        tools:text="20/10/2017" />

    <TextView
        android:id="@+id/tv_detail_averageVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_detail_title"
        android:layout_alignStart="@+id/tv_detail_title"
        android:layout_below="@+id/tv_detail_releaseDate"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/iv_detail_poster"
        android:layout_toRightOf="@+id/iv_detail_poster"
        tools:text="6.8" />

    <TextView
        android:id="@+id/tv_detail_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_detail_title"
        android:layout_alignStart="@+id/tv_detail_title"
        android:layout_below="@+id/tv_detail_averageVote"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_detail_poster"
        android:layout_toRightOf="@+id/iv_detail_poster"
        tools:text="A live-action adaptation of Disney's version of the classic 'Beauty and the Beast' tale of a cursed prince and a beautiful young woman who helps him break the spell." />

</RelativeLayout>